    android:id="@+id/txtPlayableSound"
    android:textColor="@color/cs_selectable_textc"
    android:background="@android:color/transparent"
    android:backgroundTint="@color/cs_selectable_bgtint"
    android:backgroundTintMode="src_over"
    tools:text="INTERNAL-SOUND.wav"
    />
</LinearLayout>